@import "../styles/vars"
@import "../styles/mixins"

$prefixCls = berry-form

.{$prefixCls}
    &-item
        padding-bottom: $berry-form-item-padding-bottom
        align-items: center
        
        &-label
            text-align: right
            padding-right: $berry-form-item-label-padding-right

        &-wrapper
            position: relative

        &-error-message
            position: absolute
            left: 0
            bottom: -($berry-form-item-padding-bottom - 10px)
            color: $error-color

        &-has-error
            .berry-input,
            .berry-select
                border-color: $error-color
                &:focus, &:hover
                    box-shadow: $input-box-shadow-error
