@import '../styles/vars'
@import '../styles/mixins'

$prefixCls = berry-container

.{$prefixCls}
    &::before
    &::after
        content: ''
        clear: both
        zoom: 1

    width: $container-width
    margin: 0 auto
    padding: $container-padding
    
    @media $mobile
        width: 100%

    &-centered
        flex-center()
